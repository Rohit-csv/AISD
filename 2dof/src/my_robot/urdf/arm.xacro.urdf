  <joint name="base_box2_joint" type="revolute">
    <parent link="base_link"/>
    <child link="box2"/>
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    <origin rpy=" 0 0 0" xyz=" 0 0 0.5 "/>
  </joint>
  <joint name="box2_box3_joint" type="revolute">
    <parent link="box2"/>
