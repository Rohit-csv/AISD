    <inertial>
      <mass value="0.1"/>
      <inertia ixx="4.17e-4" ixy="0.0" ixz="0.0" iyy="1.75e-3" iyz="0.0" izz="2.08e-3"/>
    </inertial>
  </link>
  
  <link name="box3">
    <visual>
      <geometry>
        <box size=" 0.075 0.075 0.46"/>
      </geometry>
      <origin rpy=" 0 0 0 " xyz=" 0 0 0.23"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size=" 0.15 0.15 0.46"/>
