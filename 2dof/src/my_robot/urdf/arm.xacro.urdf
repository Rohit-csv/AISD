    <origin rpy=" 0 0 0 " xyz=" 0 0 0.5 "/>
  </joint>
  <joint name="box3_box4_joint" type="fixed">
    <parent link="box3"/>
    <child link="box4"/>
    <origin rpy=" 0 0 0 " xyz=" 0 0 0.5 "/>
  </joint>

    <ros2_control name="GazeboSystem" type="system">
        <hardware>
            <plugin>gazebo_ros2_control/GazeboSystem</plugin>
        </hardware>
        <joint name="joint1">
            <command_interface name="position"/>
